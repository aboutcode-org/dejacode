{{#if hasErrors}}
    <p class="errornote">
        Filters error(s):<br>
        {{#each error in allErrors}}{{error}}<br>{{/each}}
    </p>
{{/if}}
<div class="grp-group grp-tabular">
    <h2 class="grp-collapse-handler">Filters</h2>
    <ul class="grp-tools">
        <li><a href="javascript://" class="grp-icon grp-add-handler" title="Add Another" {{action "addForm"}}></a></li>
    </ul>
    <div class="grp-module grp-table">
        <div class="grp-module grp-thead">
            <div class="grp-tr">
                <div class="grp-th">Field Name</div>
                <div class="grp-th">Lookup</div>
                <div class="grp-th">Value</div>
                <div class="grp-th">Runtime Parameter</div>
                <div class="grp-th">Negate (NOT)</div>
                <div class="grp-th">&nbsp;</div>
            </div>
        </div>
        <input {{bind-attr name="totalFormCountName"}} type="hidden" {{bind-attr value="totalFormCount"}}>
        <input {{bind-attr name="initialFormCountName"}} type="hidden" {{bind-attr value="initialFormCount"}}>
        {{#each container in formContainers}}
            {{view container.form.view}}
        {{/each}}
    </div>
    <div class="grp-module grp-transparent grp-dynamic-form">
        <div class="grp-row">
            <a href="javascript://" class="grp-add-handler" {{action "addForm"}}><strong>Add another filter</strong></a>
            <ul class="grp-tools">
                <li><a href="javascript://" class="grp-icon grp-add-handler" title="Add Item" {{action "addForm"}}></a></li>
            </ul>
        </div>
    </div>
</div>